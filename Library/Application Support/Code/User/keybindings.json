// Place your key bindings in this file to override the defaults
[
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown",
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp",
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
  },
  {
    "key": "space ,",
    "command": "workbench.action.showAllEditorsByMostRecentlyUsed",
    "when": "neovim.mode == 'normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space e",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "neovim.mode == 'normal' && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "] b",
    "command": "workbench.action.nextEditorInGroup",
    "when": "(neovim.mode == 'normal' || neovim.mode == 'visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "[ b",
    "command": "workbench.action.previousEditorInGroup",
    "when": "(neovim.mode == 'normal' || neovim.mode == 'visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space shift+\\", // space | doesn't seem to work because | is a shifted \
    "command": "workbench.action.splitEditorToRightGroup",
    "when": "(neovim.mode == 'normal' || neovim.mode == 'visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "space -",
    "command": "workbench.action.splitEditorToBelowGroup",
    "when": "(neovim.mode == 'normal' || neovim.mode == 'visual') && (editorTextFocus || !inputFocus)"
  },
  {
    "key": "ctrl+`",
    "command": "workbench.action.terminal.focus"
  },
  {
    "key": "ctrl+`",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+alt+k",
    "command": "workbench.action.terminal.focusNext"
  },
  {
    "key": "ctrl+alt+l",
    "command": "workbench.action.terminal.focusPrevious"
  },
  {
    "key": "ctrl+alt+m",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+alt+m",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+s",
    "command": "git.stageSelectedRanges",
    "when": "textCompareEditorVisible && editorTextFocus"
  },
  {
    "key": "ctrl+u",
    "command": "git.unstageSelectedRanges",
    "when": "textCompareEditorVisible && editorTextFocus"
  },
  {
    "key": "ctrl+alt+t",
    "command": "workbench.action.terminal.focus"
  },
  {
    "key": "cmd+g g",
    "command": "runCommands",
    "args": {
      "commands": [
        {
          "command": "workbench.action.terminal.newInActiveWorkspace",
        },
        {
          "command": "workbench.action.terminal.sendSequence",
          "args": {
            "text": "lazygit\u000D"
          }
        },
        {
          "command": "workbench.action.terminal.moveToEditor"
        },
      ]
    }
  },
  {
    "key": "down",
    "command": "-selectNextSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "up",
    "command": "-selectPrevSuggestion",
    "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
  },
  {
    "key": "ctrl+space",
    "command": "acceptAlternativeSelectedSuggestion",
    "when": "suggestWidgetMultipleSuggestions && textInputFocus && textInputFocus"
  },
  {
    "key": "ctrl+shift+alt+cmd+r",
    "command": "workbench.files.action.showActiveFileInExplorer"
  }
]
